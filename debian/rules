#!/usr/bin/make -f
# See debhelper(7) (uncomment to enable)
# output every command that modifies files on the build system.
#export DH_VERBOSE = 1


# see FEATURE AREAS in dpkg-buildflags(1)
#export DEB_BUILD_MAINT_OPTIONS = hardening=+all

# see ENVIRONMENT in dpkg-buildflags(1)
# package maintainers to append CFLAGS
#export DEB_CFLAGS_MAINT_APPEND  = -Wall -pedantic
# package maintainers to append LDFLAGS
#export DEB_LDFLAGS_MAINT_APPEND = -Wl,--as-needed


%:
	dh $@

override_dh_install:
	mkdir -p debian/lliurex-smart/etc/sudoers.d/
	install -m 0440 zz-lliurex-smart debian/lliurex-smart/etc/sudoers.d/
	mkdir -p debian/lliurex-smart/etc/xdg/autostart/
	mkdir -p debian/lliurex-smart/usr/share/applications/
	install -m 0755 zz-lliurex-smart.desktop debian/lliurex-smart/etc/xdg/autostart/
	install -m 0755 zz-lliurex-smart.desktop debian/lliurex-smart/usr/share/applications/
	mkdir -p debian/lliurex-smart/usr/bin/
	install -m 0755 lliurex-smart debian/lliurex-smart/usr/bin/
	mkdir -p debian/lliurex-smart/usr/share/polkit-1/actions/
	install -m 0755 net.lliurex.docker.policy debian/lliurex-smart/usr/share/polkit-1/actions/
# dh_make generated override targets
# This is example for Cmake (See https://bugs.debian.org/641051 )
#override_dh_auto_configure:
#	dh_auto_configure -- #	-DCMAKE_LIBRARY_PATH=$(DEB_HOST_MULTIARCH)

